@{
    ViewBag.Title = "PhidgetClient";
}
@section scripts {
    <!--Script references. -->
    @Scripts.Render("~/bundles/phidget")
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="@Url.Content("~/signalr/hubs")"></script>
}


<!-- up row -->
<div class="row">
    <div class="col-lg-12 col-sm-12">
        <!-- title div -->
        <div class="well well-sm text-center">
            <h3><strong><em><span id="spanTransport"></span></em> @ViewBag.Message <span id="spanAppPath"></span></strong></h3>
            <h4>Welcome <em><span id='spanUser'></span></em></h4>
            <h5>Date/Hour connection: <em><span id='spanDateConnection'></span></em></h5>
            <h5>ja.mvc.signalr.phidgetclient.js file version <em><span id='spanJsVersion'></span></em></h5>
        </div>
        <!-- status div -->
        <div class="well well-sm text-left">
            <span class="glyphicon glyphicon-info-sign"></span> <strong><span>Status: </span></strong> <span id='spanState' class="text-info"></span>
        </div>
    </div>
</div><!-- up row -->
